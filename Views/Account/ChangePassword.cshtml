@model SampleSecureWeb.ViewModels.ChangePasswordViewModel

<div class="row justify-content-center">
    <div class="col-lg-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header text-center bg-primary text-white">
                <h4 class="mb-0">Ganti Kata Sandi</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="CurrentPassword" class="font-weight-bold"></label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Masukkan kata sandi saat ini" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword" class="font-weight-bold"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Masukkan kata sandi baru" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Konfirmasi kata sandi baru" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-block" value="Ganti Kata Sandi" />
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p>Kembali ke <a asp-controller="Account" asp-action="Login">Halaman Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
